<Window x:Class="EmployesDatabase.AddEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployesDatabase"
        mc:Ignorable="d"
        Title="Добавить работника" Height="300" Width="400">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>

    <UniformGrid Columns="2" Rows="5">
        <TextBlock Text="Имя" Margin="15"/>
        <TextBox Margin="15"/>
        <TextBlock Text="Дата рождения" Margin="15"/>
        <DatePicker Margin="15"/>
        <TextBlock Text="Номер телефона" Margin="15"/>
        <TextBox Margin="15"/>
        <TextBlock Text="Отдел" Margin="15"/>
        <ComboBox Margin="15"/>
        <Button Content="Добавить" Margin="15" Click="AddEmloyeeClick"/>
        <Button Content="Отменить" Margin="15"/>
    </UniformGrid>
    
</Window>
